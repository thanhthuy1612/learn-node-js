<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="css/homepage.css"/>
</head>
<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/create">Create</a>
  </div>
  <fieldset class="fieldset">
    <legend>List users</legend>
    <table id="customers">
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Name</th>
        <th>City</th>
        <th>Action</th>
      </tr>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.city %></td>
          <td class="action">
            <a class="edit" href="/update/<%= user.id %>">Edit</a>
            <a class="delete" href="/delete-user/<%= user.id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>
  </fieldset>
</body>
</html>